@prefix owl: <http://www.w3.org/2002/07/owl#> .
@prefix rdf: <http://www.w3.org/1999/02/22-rdf-syntax-ns#> .
@prefix xml: <http://www.w3.org/XML/1998/namespace> .
@prefix xsd: <http://www.w3.org/2001/XMLSchema#> .
@prefix rdfs: <http://www.w3.org/2000/01/rdf-schema#> .
@prefix dct: <http://purl.org/dc/terms/> .
@prefix dc: <http://purl.org/dc/elements/1.1/> .
@prefix schema: <https://schema.org/> .
@prefix foaf: <http://xmlns.com/foaf/0.1/> .
@prefix skos: <http://www.w3.org/2004/02/skos/core#> .
@prefix sh: <http://www.w3.org/ns/shacl#> .
@prefix dcat: <http://www.w3.org/ns/dcat#> .
@prefix test: <http://w3id.org/test#> .
@prefix xsd: <http://www.w3.org/2001/XMLSchema#> .




test:ontoshape a sh:NodeShape ;
  sh:targetClass owl:Ontology ;
  sh:nodeKind sh:IRI ;
  # Ontology MUST contain a tile in rdfs:label or skos:prefLabel or dct:title or dc:title
    sh:or (
    [ sh:property [
        sh:path dc:creator ;
        sh:datatype xsd:string ;
        sh:minCount 1 ;
        ]
    ]
     [ sh:property [
        sh:path dct:creator ;
        sh:node test:User ;
        sh:minCount 1 ;
        ]
    ]
  ) .

test:User a sh:NodeShape ;
  sh:nodeKind sh:BlankNodeOrIRI ;
  sh:or (
    [sh:targetClass schema:Person]
    [sh:targetClass schema:Organization]
    [sh:targetClass foaf:Person]
    [sh:targetClass foaf:Organization]
  );
  sh:property [
        sh:path schema:creator ;
        sh:datatype xsd:string ;
        sh:minCount 1 ;
  ] ;
  sh:property [
      sh:path schema:identifier ;
        sh:or (
          [ sh:datatype xsd:string ; ]
          [ sh:nodeKind sh:IRI ;]
          [ sh:datatype schema:PropertyValue ;]
        );
    sh:minCount 1 ;
  ] ;
  sh:property [
    sh:path schema:email ;
    sh:minCount 1;
    sh:datatype xsd:string ;
  ] ;
  sh:property [
    sh:path schema:affiliation ;
    sh:node test:Affiliation ;
  ]
  .

test:Affiliation a sh:NodeShape ;
  sh:nodeKind sh:BlankNodeOrIRI ;
  sh:targetClass schema:Organization ;
  sh:property [
    sh:path schema:name ;
    sh:minCount 1;
    sh:maxCount 1;
    sh:datatype xsd:string;
  ] ;
  sh:property [
    sh:path schema:url ;
    sh:minCount 1;
    sh:datatype xsd:string ;
  ] ;
  .

test:memberOf a sh:NodeShape ;
  sh:nodeKind sh:BlankNodeOrIRI ;
  sh:targetClass schema:Organization ;
  sh:property [
    sh:path schema:name ;
    sh:minCount 1;
    sh:maxCount 1;
    sh:datatype xsd:string;
  ] ;
  sh:property [
    sh:path schema:url ;
    sh:minCount 1;
    sh:datatype xsd:string ;
  ] ;
  .


